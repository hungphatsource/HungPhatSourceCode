<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_hpusa_vinvoice_number" model="ir.ui.view">
            <field name="name">hpusa.vinvoice.number.view</field>
            <field name="model">hpusa.vinvoice.number</field>
            <field name="arch" type="xml">
            <form version="7.0" string="V-Invocice Number">
               <sheet>
               
               		<group>
               			<group>
               				<field name="name"/>
	                		<field name="date_send"/>
	                		<field name="description"/>
	                		
                		</group>
                		<group>		
	                		<field name="date_from"/>
	                		<field name="date_to"/>
	                		<field name="so_ids" widget="many2many_tags"/>				
               			</group>
               		</group>
               	</sheet>
			</form>
        	</field>
        </record>
        
  		<record id="hpusa_vinvoice_number_tree_view" model="ir.ui.view">
            <field name="name">hpusa.vinvoice_number.tree</field>
            <field name="model">hpusa.vinvoice.number</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="routing">
               			<field name="name"/>
	                	<field name="date_send"/>
	               		<field name="description"/>			
	                	<field name="date_from"/>
	                	<field name="date_to"/>
	               		<field name="so_ids"/>					
                </tree>
            </field>
        </record>
        

